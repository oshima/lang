func sum(arr: [3]int) -> int {
  var i = 0, sum = 0;
  for i < 3 {
    sum += arr[i];
    i += 1;
  }
  return sum;
}

var garr = [3]int{1, 2, 3};

func global_test() -> bool {
  return sum(garr) == 6;
}

func local_test() -> bool {
  var larr = [3]int{4, 5, 6};
  return sum(larr) == 15;
}

if global_test() && local_test() {
  puts("ok");
} else {
  puts("bad");
}
