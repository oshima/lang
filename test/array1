func sum(arr [3]int) int {
  var sum = 0;
  var i = 0;
  for i < 3 {
    sum = sum + arr[i];
    i = i + 1;
  }
  return sum;
}

var garr = [3]int{1, 2, 3};

func globalTest() bool {
  return sum(garr) == 6;
}

func localTest() bool {
  var larr = [3]int{4, 5, 6};
  return sum(larr) == 15;
}

if globalTest() && localTest() {
  puts("ok");
} else {
  puts("bad");
}
